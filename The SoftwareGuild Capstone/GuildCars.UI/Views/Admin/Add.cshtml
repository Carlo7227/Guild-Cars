@model GuildCars.UI.Models.VehicleAddViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add Vehicle</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Vehicle", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddVehicle" }))
        {
            <div class="col-md-6">
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Model</label>
                    @Html.DropDownList("Vehicle.ModelID", Model.Models, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Make</label>
                    @Html.DropDownListFor(m => m.Vehicle.Model.MakeID, Model.Makes, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Exterior Color</label>
                    @Html.DropDownListFor(m => m.Vehicle.ExteriorColorID, Model.Colors, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Interior Color</label>
                    @Html.DropDownListFor(m => m.Vehicle.InteriorColorID, Model.Colors, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Year</label>
                    @Html.TextBoxFor(m => m.Vehicle.Year, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>VIN#</label>
                    @Html.TextBoxFor(m => m.Vehicle.VIN, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>MSRP</label>
                    @Html.TextBoxFor(m => m.Vehicle.MSRP, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Sales Price</label>
                    @Html.TextBoxFor(m => m.Vehicle.SalesPrice, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mileage</label>
                    @Html.TextBoxFor(m => m.Vehicle.Mileage, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextAreaFor(m => m.Vehicle.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Image Upload</label>
                    @Html.TextBoxFor(m => m.Vehicle.ImageFileName, new { @class = "form-control" })
                </div>
                <div class="checkbox">
                    <label>
                    @Html.CheckBoxFor(m => m.Vehicle.IsAutomatic) Automatic
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>
