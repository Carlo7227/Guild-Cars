@model GuildCars.Models.Queries.EnterSalesInfoDisplay
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    @using (Html.BeginForm("Sales", "Sale", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddListing" }))
                    {

                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.TextBoxFor(m => m.NewSale.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Phone</label>
                                    @Html.TextBoxFor(m => m.NewSale.Phone, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.NewSale.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Street1</label>
                                    @Html.TextBoxFor(m => m.NewSale.Street1, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Street2</label>
                                    @Html.TextBoxFor(m => m.NewSale.Street2, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>City</label>
                                    @Html.TextBoxFor(m => m.NewSale.City, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>States</label>
                                    @Html.DropDownListFor(m => m.StateID, new SelectList(Model.States, "StateID", "StateAbbreviation"), new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Purchase Price</label>
                                    @Html.TextBoxFor(m => m.NewSale.PurchasePrice, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Purchase Type</label>
                                    @Html.DropDownListFor(m => m.PurchaseTypeID, new SelectList(Model.PurchaseTypes, "PurchaseTypeID", "Type"), new { @class = "form-control" })
                                </div>
                            </div>
                            <button class="btn btn-default">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
